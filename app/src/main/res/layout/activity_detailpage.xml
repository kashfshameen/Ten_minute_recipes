<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activity.detailpage">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView2">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/detail_title"
        android:text="Breakfast"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        />

</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="9dp"
        android:layout_margin="10dp">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/detail_image"
            android:src="@drawable/b2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:paddingLeft="10dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/ejza_title"
        android:text="Ingredient"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        />
    <TextView
        android:paddingLeft="5dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/ejza_list"
        android:text="Ingredient_list"
        android:textColor="@color/black"
        android:textSize="12sp"
        />



</LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="10dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:id="@+id/tarqeeb_title"
            android:text="Method"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <TextView
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:id="@+id/tarqeeb_detail"
            android:text="Detail"
            android:textColor="@color/black"
            android:textSize="12sp"
            />



    </LinearLayout>

</LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2992948270492543/8688332596">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>